<h4>Rooms Index</h4>
<p>
<%if @rooms.empty? %>
<p> No rooms found</p>
<%else%>

	<% @rooms.each do |room| %>
 
	<%if (room.is_authorized == true) %>
	
		<p><%= link_to image_tag(room.images.url), room %>	
		<%= link_to room.name, room %></p>
		<div class="col-md-12"><hr></div>
	
	 <%end%>
    <%end%>
<%end%>
<%= will_paginate @rooms %>
<p><%= link_to "Add room", new_room_path %></p>

