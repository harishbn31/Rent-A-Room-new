
<h4>Welcome to Rent a Room</h4>
<p>
<%if @rooms.empty? %>
<p> No rooms found</p>
<%else%>
<table >
  <thead>
    <tr>
      <th>Rooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	 <% @rooms.each do |room| %>
 <tr>
		<%if (room.is_authorized == true) %>
		<td><%= link_to image_tag(room.images.url), room %></td>	
		<td> <%=  room.name%></td>
		<% elsif (current_user.role?"admin") && (room.is_authorized == false)%>
		<td><%= link_to room.name, room%></td><% if current_user.role?"admin"%>
			<%= form_for room do |f| %>
			<%= f.hidden_field :is_authorized, value:true%>
			<td><%= f.submit "Authorize"%></td>
			<%end%>
			<%end%>
			<%end%>
		<%end%>
      </tr>
  </tbody>
</table>
<%end%>
<p>
<%= link_to "Add room", new_room_path %></p>

