
<h4>Listing Rooms</h4>
<p>
<%if @rooms.empty? %>
<p> No rooms found</p>
<%else%>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
       <th>Action</th>
       <th colspan="3"></th>
   </tr>
  </thead>

  <tbody>
  		 <% @rooms.each do |room| %>
  		 <tr>	
	 	<td><%= link_to room.name, room%></td>
		<td><%= link_to "Update", edit_room_path(room)%></td>
		<%end%>
      </tr>
  </tbody>
</table>
<%end%>
<%= link_to "Add room", new_room_path %>